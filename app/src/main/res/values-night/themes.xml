<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUserApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- LIGHT MODE -->
    <!-- Background -->
    <style name="SCREEN">
        <item name="android:background">#232323</item>
    </style>

    <!-- text -->
    <style name="TEXT">
        <item name="android:textColor">#FFF</item>
    </style>

    <!-- tabs -->
    <style name="TABS">
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="tabIndicatorColor">#DD2C00</item>
        <item name="tabSelectedTextColor">#DD2C00</item>
        <item name="tabTextColor">#000000</item>
    </style>

    <!-- card -->
    <style name="CARD">
        <item name="android:background">#000</item>
    </style>

</resources>